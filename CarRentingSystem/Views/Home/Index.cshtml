@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
	var cars = Model.Cars;
	var firstCar = cars.Any() ? cars[0] : null;
	var secondCar = cars.Count > 1 ? cars[1] : null;
	var thirdCar = cars.Count > 2 ? cars[2] : null;
}


@if (!cars.Any())
{
	<div class="jumbotron">
		<h1 class="display-4">Welcome to the best place for renting cars!</h1>
		<p class="lead">There are no cars in the system currently available so why don't you add one?</p>
		<hr class="my-4">
		<p class="lead">
			<a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
		</p>
	</div>
}


<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@if (firstCar != null)
		{
			<div class="carousel-item active">
				<img class="d-block w-100" src="@firstCar.ImageUrl" alt="@firstCar.Brand @firstCar.Model">
				<div class="carousel-caption d-none d-md-block">
					<h5>@firstCar.Year @firstCar.Brand @firstCar.Model</h5>
				</div>
			</div>
		}
		@if (secondCar != null)
		{
			<div class="carousel-item">
				<img class="d-block w-100" src="@secondCar.ImageUrl" alt="@secondCar.Brand @secondCar.Model">
				<div class="carousel-caption d-none d-md-block">
					<h5>@secondCar.Year @secondCar.Brand @secondCar.Model</h5>
				</div>
			</div>
		}
		@if (thirdCar != null)
		{
			<div class="carousel-item">
				<img class="d-block w-100" src="@thirdCar.ImageUrl" alt="@thirdCar.Brand @thirdCar.Model">
				<div class="carousel-caption d-none d-md-block">
					<h5>@thirdCar.Year @thirdCar.Brand @thirdCar.Model</h5>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>
